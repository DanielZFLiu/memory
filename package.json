{
  "name": "memory",
  "version": "1.0.0",
  "description": "A local RAG system for storing, searching, and querying tagged text pieces using ChromaDB and Ollama",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/main.ts",
    "start": "node dist/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db": "chroma run --port 8000",
    "db:port": "node ./package_scripts/serve-chroma.js",
    "ollama": "ollama serve",
    "ollama:port": "node ./package_scripts/serve-ollama.js"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "chromadb": "^1.9.2",
    "express": "^4.21.0",
    "ollama": "^0.5.11",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "supertest": "^7.2.2",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.18"
  }
}
